{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "./build/tsc",
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@core": ["./BotCore/src/core/core.js"],
      "@core/*": ["./BotCore/src/core/*"],
      "@init/*": ["./BotCore/src/init/*"],
      "@system-modules/*": ["./BotCore/src/system-modules/*"],
      "@util/*": ["./BotCore/src/util/*"],
    }
  },
  "references": [
    {
      "path": "./BotCore"
    }
  ]
}
